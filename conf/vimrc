" highlight
syntax on
" shows line number
set number
" shows the current line
set cursorline
" better for search
set ignorecase
set smartcase
" ident with 4 spaces
set smartindent
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set autoindent
" stop backuping files
set nobackup
set colorcolumn=79
" custom config by file type
au FileType html setl sw=2 sts=2 et colorcolumn=120
au FileType less setl sw=2 sts=2 et
au FileType stylus setl sw=2 sts=2 et
au FileType css setl sw=2 sts=2 et
au FileType javascript setl sw=4 sts=4 et
au FileType coffee setl sw=4 sts=4 et
" backspace fix
set backspace=indent,eol,start


" COLORS

"colorscheme developer
colorscheme delek 

" syntax highlight for .less files
au BufNewFile,BufRead *.less set filetype=less

" install packages
execute pathogen#infect()
filetype plugin indent on

" plugins
autocmd BufWritePost *.py call Flake8()
autocmd BufWritePost *.coffee CoffeeLint | cwindow | redraw!
